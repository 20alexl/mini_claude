{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind prompt \"$USER_PROMPT\" 2>/dev/null || echo ''",
            "timeout": 2000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind edit \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || echo ''",
            "timeout": 1000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind bash_json 2>/dev/null || echo ''",
            "timeout": 1000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind post_edit \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || echo ''",
            "timeout": 500
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind post_write \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || echo ''",
            "timeout": 500
          }
        ]
      }
    ]
  }
}
