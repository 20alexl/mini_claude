{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind prompt 2>/dev/null || echo ''",
            "timeout": 2000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind edit \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || echo ''",
            "timeout": 1000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m mini_claude.hooks.remind bash \"$TOOL_INPUT_COMMAND\" \"$TOOL_EXIT_CODE\" 2>/dev/null || echo ''",
            "timeout": 1000
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '<mini-claude-post-edit>Remember: loop_record_edit(file_path=\"$TOOL_INPUT_FILE_PATH\", description=\"...\") to track this change</mini-claude-post-edit>'",
            "timeout": 500
          }
        ]
      }
    ]
  }
}
